@model IEnumerable<string>
@{
    ViewData["Title"] = "ShowImages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Resimler</h1>
@foreach (var item in Model)
{
    <div>
        <img src="~/images/@item" style="widht:50px; height:100px; border:1px; solid red;" />
        <h3>Resim Adı :@item </h3>
    </div>
}
<form method="post" asp-action="ShowImages">
    <input type="text" name="name" placeholder="Silinecek resim adı"/>
    <button type="submit" class="btn btn-danger">SİL</button>
</form>
